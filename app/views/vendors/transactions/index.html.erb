<div class="py-8 px-6 min-w-[1024px]">
  <h1 class="mb-2 text-2xl font-medium">Lịch sử nạp tiền vào hệ thống</h1>

  <%# Toolbar %>
  <div class="mb-4 flex flex-row justify-end">
    <div class="flex justify-center items-center">
      <%= link_to new_vendor_transaction_path, class: "flex gap-1 justify-center items-center pl-3 pr-4 py-2 text-sm text-white bg-indigo-500 font-medium rounded hover:bg-indigo-600" do %>
        <%= inline_svg_tag "svg/plus.svg", size: "18" %>
        <span>Nạp thêm tiền</span>
      <% end %>
    </div>
  </div>

  <%# Table %>
  <div class="flex flex-col border border-gray-200 rounded overflow-x-auto shadow-sm">
    <table class="min-w-full table-fixed">
      <thead class="bg-[#f8fafc] text-left">
        <tr>
          <th scope="col" class="pl-[18px] px-2.5 py-[8.7px] text-sm font-medium text-[#637286] tracking-wider border-[#e2e7ee] border-b leading-6 shadow-[0_-10px_0_white]">
            STT
          </th>
          <th scope="col" class="px-2.5 py-[8.7px] text-sm font-medium text-[#637286] tracking-wider border-[#e2e7ee] border-b leading-6 shadow-[0_-10px_0_white]" style="border-left: 1px dashed #d5dce6;">
            Số tiền
          </th>
          <th scope="col" class="px-2.5 py-[8.7px] text-sm font-medium text-[#637286] tracking-wider border-[#e2e7ee] border-b leading-6 shadow-[0_-10px_0_white]" style="border-left: 1px dashed #d5dce6;">
            Ngày nạp
          </th>
          <th scope="col" class="px-2.5 py-[8.7px] text-sm font-medium text-[#637286] tracking-wider border-[#e2e7ee] border-b leading-6 shadow-[0_-10px_0_white]" style="border-left: 1px dashed #d5dce6;">
            Checkout URL
          </th>
          <th scope="col" class="px-2.5 py-[8.7px] text-sm font-medium text-[#637286] tracking-wider border-[#e2e7ee] border-b leading-6 shadow-[0_-10px_0_white]" style="border-left: 1px dashed #d5dce6;">
            Trạng thái
          </th>
          <th scope="col" class="px-2.5 py-[8.7px] text-sm font-medium text-[#637286] tracking-wider border-[#e2e7ee] border-b leading-6 shadow-[0_-10px_0_white]" style="border-left: 1px dashed #d5dce6;">
            Hành động
          </th>
        </tr>
      </thead>
      <tbody id="transactions">
        <%= render partial: 'transaction_table_row', collection: @transactions, as: :transaction %>
      </tbody>
    </table>
  </div>

  <%# Pagination %>
  <div class="mt-2 flex justify-between mx-2" id="pagination">
    <%== pagy_info(@pagy) %>
    <%== pagy_nav(@pagy) %>
  </div>
</div>
