<div class="bg-gray-100 py-12">
  <div class="max-w-lg mx-auto bg-white rounded-lg shadow-md px-8 py-10 flex flex-col items-center">
    <h2 class="text-xl font-bold text-center text-gray-700 mb-8">Vendor Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-full flex flex-col gap-4" }) do |f| %>
      <%= render "vendors/shared/error_messages", resource: resource %>

      <div class="flex items-start flex-col justify-start">
        <%= f.label :email, class: "text-sm text-gray-700 mr-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-1 focus:ring-blue-500" %>
      </div>

      <div class="flex items-start flex-col justify-start">
        <%= f.label :name, class: "text-sm text-gray-700 mr-2" %>
        <%= f.text_field :name, class: "w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-1 focus:ring-blue-500" %>
      </div>

      <div class="flex items-start flex-col justify-start">
        <%= f.label :description, class: "text-sm text-gray-700 mr-2" %>
        <%= f.text_area :description, class: "w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-1 focus:ring-blue-500" %>
      </div>

      <div class="flex items-start flex-col justify-start">
        <%= f.label :password, class: "text-sm text-gray-700 mr-2" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-1 focus:ring-blue-500" %>
      </div>

      <div class="flex items-start flex-col justify-start">
        <%= f.label :password_confirmation, class: "text-sm text-gray-700 mr-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-1 focus:ring-blue-500" %>
      </div>

      <%= f.submit "Sign up", class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-md shadow-sm" %>
    <% end %>

    <div class="mt-4 text-center">
      <span class="text-sm text-gray-500">Already have an account? </span>
      <%= link_to "Login", new_vendor_session_path, class: "text-blue-500 hover:text-blue-600" %>
    </div>
  </div>
</div>
