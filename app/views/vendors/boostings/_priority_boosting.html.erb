<style>
  .label--v1 {
    background: url(<%= asset_path "svg/Label_VIPSilver.svg" %>) no-repeat center center transparent;
  }
  .label--v2 {
    background: url(<%= asset_path "svg/Label_VIPGold.svg" %>) no-repeat center center transparent;
  }
  .label--v3 {
    background: url(<%= asset_path "svg/Label_VIPDiamond.svg" %>) no-repeat center center transparent;
  }
</style>

<%# sgasgsgasg %>
<tr id="<%= dom_id priority_boosting %>" class="hover:bg-gray-100 odd:bg-white even:bg-gray-50 text-[#333c48]">
  <td class="px-2.5 pl-[18px] font-semibold text-sm leading-7 border-[#e2e7ee] border-b">
    <%= link_to edit_vendor_service_boosting_path(priority_boosting.service, priority_boosting), class: "min-w-full line-clamp-2 break-words hover:underline hover:text-indigo-500" do %>
      <%= priority_boosting.id %>
    <% end %>
  </td>
  <td style="border-left: 1px dashed #d5dce6;" class="px-2.5 text-sm leading-7 border-[#e2e7ee] border-b">
    <div class="h-6 w-8 label--v<%= priority_boosting.level %>"></div>
  </td>
  <td style="border-left: 1px dashed #d5dce6;" class="px-2.5 text-sm leading-7 border-[#e2e7ee] border-b">
    <div class="w-28">
      <%= local_time(priority_boosting.start_time) %>
    </div>
  </td>
  <td style="border-left: 1px dashed #d5dce6;" class="px-2.5 text-sm leading-7 border-[#e2e7ee] border-b">
    <div class="w-28">
      <%= local_time(priority_boosting.end_time) %>
    </div>
  </td>
  <td style="border-left: 1px dashed #d5dce6;" class="px-2.5 text-sm leading-10 border-[#e2e7ee] border-b">
    <div class="w-28">
      <span class="inline-block whitespace-nowrap px-2 py-0.5 text-xs text-center font-bold rounded-full <%= priority_boosting.active? ? "text-green-400 bg-green-100" : priority_boosting.expired? ? "text-red-400 bg-red-100" : "text-yellow-400 bg-yellow-100" %>">
        <%= priority_boosting.status %>
      </span>
    </div>
  </td>
  <td style="border-left: 1px dashed #d5dce6;" class="px-2.5 text-sm whitespace-nowrap leading-10 border-[#e2e7ee] border-b overflow-visible">
    <div class="flex flex-row gap-1 w-28">
      <div class="relative flex justify-center items-center">
        <%= link_to edit_vendor_service_boosting_path(priority_boosting.service, priority_boosting), class: "peer text-base text-gray-500 hover:text-indigo-500" do %>
          <%= inline_svg_tag "svg/settings.svg", size: "18" %>
        <% end %>
        <span class="peer-hover:visible peer-hover:opacity-100 invisible opacity-0 absolute bottom-full left-1/2 transform -translate-x-1/2 px-2 py-1 bg-black text-white text-sm rounded whitespace-nowrap z-10 transition-opacity duration-200 ease-in-out">
          Chỉnh sửa
        </span>
      </div>
      <div class="relative flex justify-center items-center">
        <%= button_to vendor_service_boosting_path(priority_boosting.service, priority_boosting), method: :delete, data: {turbo_confirm: "Bạn có chắc muốn xóa dịch vụ này?"}, form_class: "peer text-base text-gray-500 hover:text-indigo-500 flex justify-center items-center" do %>
          <%= inline_svg_tag "svg/trash-2.svg", size: "18" %>
        <% end %>
        <span class="peer-hover:visible peer-hover:opacity-100 invisible opacity-0 absolute bottom-full left-1/2 transform -translate-x-1/2 px-2 py-1 bg-black text-white text-sm rounded whitespace-nowrap z-10 transition-opacity duration-200 ease-in-out">
          Xóa
        </span>
      </div>
    </div>
  </td>
</tr>
