<p style="color: green"><%= notice %></p>

<h1>Services</h1>
<%= link_to "New service", new_vendor_service_path, class: "rounded-lg cursor-pointer w-fit bg-white py-2 px-4 border border-gray-300 hover:border-gray-600 hover:bg-gray-200" %>

<div id="services">
  <% @services.each do |service| %>
    <%= render service %>
    <p>
      <%= link_to "Show this service", vendor_service_path(service) %>
    </p>
  <% end %>
</div>
