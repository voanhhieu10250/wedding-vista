<%= form_with(model: [ :vendor, spending ]) do |form| %>
  <% if spending.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(spending.errors.count, "error") %> prohibited this spending from being saved:</h2>

      <ul>
        <% spending.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.label :kind, class: "block" do %>
      Hiển thị
    <% end %>
    <div>
      <%= form.radio_button :kind, Spending.kinds[:boost_limit], checked:true %>
      <%= form.label :kind_boost_limit, "Lượt đẩy tin" %>
    </div>
    <div>
      <%= form.radio_button :kind, Spending.kinds[:post_limit] %>
      <%= form.label :kind_post_limit, "Lượt đăng bài" %>
    </div>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
