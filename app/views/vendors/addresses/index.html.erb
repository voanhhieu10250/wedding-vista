<%= turbo_frame_tag "service_addresses_frame" do %>
  <h1>Addresses</h1>

  <div id="addresses">
    <% @addresses.each do |address| %>
      <%= render address %>
      <p>
        <%= link_to "Show this address", vendor_service_address_path(params[:service_id], address) %>
      </p>
    <% end %>
  </div>

  <%= link_to "New address", new_vendor_service_address_path(params[:service_id]) %>
<% end %>
