<h1>Galleries</h1>

<div id="galleries">
  <% @galleries.each do |gallery| %>
    <%= render gallery %>
    <p>
      <%= link_to "Show this gallery", vendor_service_gallery_path(params[:service_id], gallery) %>
    </p>
  <% end %>
</div>

