<div class="flex flex-1 items-center px-5 pt-6 mb-14">
  <%= link_to vendor_root_path, class: "flex flex-shrink-0 items-center gap-1" do %>
    <img class="h-8 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=500" alt="Your Company">
    <span class="font-medium text-lg">Wedding Vista</span>
  <% end %>
</div>

<div class="flex items-center gap-2 m-0 mx-[15px] mb-4">
  <div class="relative flex rounded-full h-16 w-16 bg-gray-400 text-sm focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800">
    <span class="sr-only">Open user menu</span>
    <% if current_vendor.avatar.attached? %>
      <%= image_tag current_vendor.avatar&.variant(:thumb), class: "w-full h-full object-cover rounded-full" %>
    <% else %>
      <div class="absolute inset-0 flex items-center justify-center text-white text-3xl font-semibold w-full h-full"><%= current_vendor.name[0]&.titleize %></div>
    <% end %>
  </div>
  <div class="max-w-full overflow-hidden">
    <p class="text-gray-800 text-base font-medium" title="<%= current_vendor.name %>">
      <%= current_vendor.name %>
    </p>
    <p class="text-gray-500 text-xs font-medium truncate" title="<%= current_vendor.email %>">
      <%= current_vendor.email %>
    </p>
  </div>
</div>

<div class="text-black/85 text-sm tabular-nums leading-[1.5715] box-border m-0 mx-[15px] mb-4 bg-[rgb(242,242,242)] rounded-md p-4">
  <div class="mb-2">
    <h5 class="text-base font-medium tracking-[0.2px] text-[rgb(44,44,44)]">Tài khoản</h5>
  </div>

  <div class="flex justify-between mb-2 text-sm">
    <div class="text-[rgb(80,80,80)]">Số dư</div>
    <div class="text-[rgb(44,44,44)] font-medium">
      <%= number_to_currency current_vendor.balance, unit: "đ", precision: 0, format: "%n %u" %>
    </div>
  </div>
  <div class="flex justify-between mb-2 text-sm">
    <div class="text-[rgb(80,80,80)]">SL tin có thể đăng</div>
    <div class="text-[rgb(44,44,44)] font-medium"><%= current_vendor.post_limit %></div>
  </div>

  <%= link_to new_vendor_transaction_path, class: "flex items-center justify-center gap-2 rounded cursor-pointer whitespace-nowrap mt-3 w-full tracking-[0.2px] bg-white py-1.5 px-3 text-[rgb(224,60,49)] border border-[rgb(224,60,49)] hover:bg-[rgb(224,60,49)] hover:text-white" do %>
    <span>
      <svg font-size="16px" width="1em" height="1em" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M16 17H22" stroke="currentColor" stroke-width="1.9" stroke-linecap="round" stroke-linejoin="round"></path><path d="M19 14V20" stroke="currentColor" stroke-width="1.9" stroke-linecap="round" stroke-linejoin="round"></path><path d="M13 17H4C2.89543 17 2 16.1046 2 15V6C2 4.89543 2.89543 4 4 4H17C18.1046 4 19 4.89543 19 6V10.5" stroke="currentColor" stroke-width="1.9" stroke-linecap="round"></path><path d="M2 8H19" stroke="currentColor" stroke-width="1.9" stroke-linecap="round" stroke-linejoin="round"></path></svg>
    </span>
    <span>
      Nạp tiền
    </span>
  <% end %>
</div>
<nav>
  <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
  <%= link_to 'Quản lý dịch vụ', vendor_services_path,
                                class: [ "block rounded-md px-3 py-2 text-base font-medium",
                                  (is_active?(path: vendor_services_path) ? "bg-gray-900 text-white" : "hover:bg-gray-700 hover:text-white")
                                ] %>
  <%#   <a href="#" class="hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium">Quản lý câu hỏi</a> %>
  <%#   <a href="#" class="hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium">Quản lý yêu cầu tư vấn</a> %>

  <%= link_to 'Quản lý bài đăng', vendor_ideas_path,
                                class: [ "block rounded-md px-3 py-2 text-base font-medium",
                                  (is_active?(path: vendor_ideas_path) ? "bg-gray-900 text-white" : "hover:bg-gray-700 hover:text-white")
                                ] %>
  <a href="#" class="hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium">Quản lý tài khoản</a>
  <a href="#" class="hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium">Lịch sử nạp tiền</a>
</nav>
