<%= form_with(model: [ :admin, topic ]) do |form| %>
  <% if topic.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
        <% topic.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col gap-2">
    <div>
      <%= form.label :name, class: "font-semibold text-sm", placeholder: "Đặt tiêu đề" %>
    </div>
    <%= form.text_field :name, class: "border border-gray-300 rounded py-1.5 px-3.5 text-sm outline-none focus:border-gray-500 hover:border-gray-400" %>
  </div>

  <div class="flex flex-col gap-2">
    <div>
      <%= form.label :description, class: "font-semibold text-sm" %>
    </div>
    <%= form.text_area :description, class: "min-h-40 border border-gray-300 rounded py-1.5 px-3.5 text-sm outline-none focus:border-gray-500 hover:border-gray-400", placeholder: "Mô tả" %>
  </div>

  <div class="flex flex-col gap-2">
    <div>
      <%= form.label :topic_category_id, class: "font-semibold text-sm" %>
    </div>
    <%= form.collection_select :topic_category_id, TopicCategory.all, :id, :name, { :include_blank => "Chọn thể loại chủ đề" },
    { class: "border border-gray-300 rounded py-1.5 px-3.5 text-sm outline-none focus:border-gray-500 hover:border-gray-400" } %>
  </div>

  <div>
    <%= form.submit "Submit", data: {turbo_submits_with: "Saving..."} %>
  </div>
<% end %>
