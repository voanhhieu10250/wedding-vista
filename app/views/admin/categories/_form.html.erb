<%= form_with(model: [ :admin, category ]) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex items-start flex-col justify-start">
    <%= form.label :name, class: "text-sm text-gray-700 mr-2" %>
    <%= form.text_field :name, class: "w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-1 focus:ring-blue-500" %>
  </div>

  <div class="flex items-start flex-col justify-start">
    <%= form.label :image, class: "text-sm text-gray-700 mr-2" %>
    <%= form.file_field :image, accept: "image/*", class: "w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-1 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
